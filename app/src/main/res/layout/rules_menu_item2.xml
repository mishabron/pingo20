<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/payout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1000"
            android:textColor="@android:color/white"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51" />

        <TextView
            android:id="@+id/payout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1000"
            android:textColor="@android:color/white"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="@id/payout1"
            app:layout_constraintTop_toBottomOf="@id/payout1" />

        <TextView
            android:id="@+id/payout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1000"
            android:textColor="@android:color/white"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="@id/payout2"
            app:layout_constraintTop_toBottomOf="@id/payout2" />

        <TextView
            android:id="@+id/payout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Game"
            android:textColor="@android:color/white"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="@id/payout3"
            app:layout_constraintTop_toBottomOf="@id/payout3" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>