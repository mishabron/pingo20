<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pingoWindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.fragment.PingoWindow"
    android:layout_gravity="center_vertical|center_horizontal">

    <ImageView
        android:id="@+id/window_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:background="@drawable/blue_window"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <ViewFlipper
        android:id="@+id/number_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:autoStart="false"
        android:inAnimation="@anim/from_top"
        android:outAnimation="@anim/to_bottom"
        android:flipInterval="140"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pingo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pingo"
            android:tag="10"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/one"
            android:tag="1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two"
            android:tag="2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/three"
            android:tag="3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/four"
            android:tag="4"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/five"
            android:tag="5"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/six"
            android:tag="6"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/seven"
            android:tag="7"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eight"
            android:tag="8"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nine"
            android:tag="9"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/numberPick0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/zero"
            android:tag="0"
            android:layout_gravity="center_vertical|center_horizontal"/>

    </ViewFlipper>

</android.support.constraint.ConstraintLayout>